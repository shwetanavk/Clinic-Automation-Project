@model IEnumerable<ClinicAutomationProject.Models.PatientModel>
@{
    ViewBag.Title = "ViewPatient";
}


<div class="jumbotron">


    <h2>ViewPatient</h2>
    <label></label>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Password</th>
            <th colspan="2">Operation</th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                @Html.HiddenFor(a => item.Id);
                <tr>
                    <td>@item.PatientName</td>
                    <td>@item.PatientAge</td>
                    <td>@item.PatientGender</td>
                    <td>@item.Email</td>
                    <td>@item.Password</td>
                    <td>
                        <a href="@Url.Action("EditPatient", "Admin", new { patId = item.Id})" class="text-danger">Edit</a>
                    </td>
                    <td>
                        <a href="@Url.Action("DeletePatient", "Admin", new { patId = item.Id })" class="text-danger"
                           onclick="return confirm('You want to delete?')">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No record found.</td>
            </tr>
        }
    </table>



    <div class="row">
        <div class="col-md-4">
            <label class="container"></label>
            <div class="col-md-2">
                <p><a href="@Url.Action("AdminLogin", "Admin")" ; class="btn btn-primary btn-lg">Go Back</a></p>
            </div>
        </div>
    </div>
</div>