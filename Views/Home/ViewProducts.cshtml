@model IEnumerable<ClinicAutomationProject.Models.ProductInventoryModel>

@{
    ViewBag.Title = "ViewProducts";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-10">
            <p>
                <h2>Inventory</h2>
            </p>
        </div>
    </div>

    <label></label>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Product Name</th>
            <th>Product Price</th>
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {

                @Html.HiddenFor(a => item.ProductID);
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.ProductPrice</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No record found.</td>
            </tr>
        }
    </table>
</div>

