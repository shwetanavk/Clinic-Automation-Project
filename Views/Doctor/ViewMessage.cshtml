@model IEnumerable<ClinicAutomationProject.Models.MessageSenderPatientToDoctorModel>
@{
    ViewBag.Title = "ViewMessage";
}
<div class="jumbotron">
    <h2>View Messages</h2>
    <label></label>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Sent by</th>
            <th>Sent to</th>
            <th>Subject</th>
            <th>Message</th>
            <th>Message Date</th>
            @*<th>Reply</th>*@
        </tr>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                @Html.HiddenFor(a => item.MessageID)
                <tr>
                    <td>@item.SenderName</td>
                    <td>@item.ReceiverName</td>
                    <td>@item.MessageSubject</td>
                    <td>@item.MessageDescription</td>
                    <td>@item.MessageDate.ToString("dd-MMM-yyyy,   hh-mm tt")</td>
                    @*<td>
                        <a href="@Url.Action("ReplyToAMessage", "Doctor", new { messageID = item.MessageID })" class="text-danger">Reply</a>
                    </td>*@
                </tr>

            }
        }
        else
        {
            <tr>
                <td colspan="8">No record found.</td>
            </tr>
        }
    </table>
    <div class="row">
        <div class="col-md-4">
            <label class="container"></label>
            <div class="col-md-2">
                <p><a href="@Url.Action("DoctorLogin","Doctor")" class="btn btn-primary btn-lg">Go Back</a></p>
            </div>
        </div>
    </div>
</div>
