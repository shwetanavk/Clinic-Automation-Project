@model ClinicAutomationProject.Models.LoginModel
@{
    ViewBag.Title = "LoginPage";
}


<div class="jumbotron">

    <h2>Login into your account</h2>
    @using (Html.BeginForm("LoginPage", "Login", FormMethod.Post))
    {

        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="container"></label>
            @Html.DropDownListFor(a => a.RoleId, Model.RoleTypes, "Select Role", new { @class = "form-control" })

            <label class="container"></label>
            @Html.ValidationMessageFor(a => a.RoleId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="container"></label>
            @Html.TextBoxFor(a => a.Email, new { @class = "form-control", @placeholder = "Email" })
            @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(a => a.Password, new { @class = "form-control", @placeholder = "Password" })
            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary" />
        </div>
        <div class="form-group">
            <span class="text-danger">@ViewBag.Message</span>
        </div>
    }
</div>


